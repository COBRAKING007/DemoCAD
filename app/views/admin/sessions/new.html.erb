<% content_for :layout, "admin" %>

<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">Admin Login</h1>
    
    <%= form_with url: admin_login_path, method: :post, class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, required: true, autofocus: true, class: "form-input", placeholder: "admin@example.com" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, required: true, class: "form-input", placeholder: "Enter your password" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Login", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
